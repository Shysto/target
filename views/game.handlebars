<!doctype html>
<html>

<head>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Audiowide"/>
    <link rel="stylesheet" href="../css/style.css"/>
    <title>Game</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        #target {
            background-color: blue;
            width: 30px;
            height: 30px;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
        }
        .displayScore{
            font-size: 15px;
        }
        #startButton{
            vertical-align: middle;
            display:block;
            }
        
    </style>
</head>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/socket.io/socket.io.js"></script>
<script>
    $(document).ready(function() {
        let players = [];
        let idRound;
        let username;
        let socket=io();
        $("#startButton").on({
            click: function(){
                $("#startButton").hide();

        $('#target').hide();
        username = "{{username}}";
        console.log(username);
        socket.emit('setUsername',username);

        socket.on('userTaken', function(msg){
            $("#error").html(msg);
        })
        
        socket.on('round', function(msg) {
            console.log(msg["coordinates"]);
            $('#target').css('transform', `translate(${msg["coordinates"][0]}vw,${msg["coordinates"][1]}vh)`);
            players = msg["players"];
            var i;
            $('li').remove();
            for (i = 0; i < players.length; i++) {
                const unLi = $("<li></li>");
                unLi.html(`${players[i]["login"]} : ${players[i]["score"]}`);
                console.log("Score displayed");
                unLi.addClass("displayScore");
                $("#score").append(unLi);
            }
        });
        socket.on('idRound', function(id){
            idRound = id;
            console.log(idRound);
        })
        socket.on("Start", function(msg){
            console.log("START");
            $('#target').show();
            socket.emit('GO',{"idRound": idRound, "user": username});
        })
        $('#target').on({
            click: function() {
                socket.emit('target', {"idRound": idRound, "user": username});
            }
        })
            socket.on('end', function(msg){
            console.log("END");
            $('#target').hide();
            $("#startButton").show();
            socket.disconnect();
        });
            socket.on('abort', function(msg){
            console.log("ABORT!");
            $('#target').hide();
            $("#startButton").show();
            socket.disconnect();
            socket = io();
        });
        window.addEventListener('beforeunload', function (e) {
            socket.emit('leaving', {"idRound": idRound, "user": username});
            console.log("Unload");
        });
        }
        })

    });
</script>

<body>
<p id="target"></p>
<p id="error"></p>
<ul id="score"></lu>
<p id="startButton" class="anim">Let's start!</p>
    <br/>
    <br/>
    <br/>
</body>

</html>