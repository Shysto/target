<!doctype html>
<html>

<head>
    <title>HighScores</title>
    <link rel="stylesheet" type="text/css" href="/css/highscores.css"/>
    <style>
        .head b{
            color: #e6ff2f;
            text-shadow: 0 -40px 100px, 0 0 2px, 0 0 0.2em #ffea3f, 0 0 0.2em;
        }
    </style>
</head>

<body>

<div class="head">
    <b>High<span>sc</span>ore<span>s</span></b>
</div>

<div id="container">
    <div id="user-box">
        {{#each user}}
            <p class="user">{{numero}} - {{name}} : {{highScore}}</p>
        {{/each}}
    </div>

    <div>
        <input type="text" id="inpLogin" name="pseudo" placeholder="Pseudo">
        <input type="button" id="btnSearch" name="search" value="Search a player">
    </div>
</div>

<script type="text/javascript" src="/js/highscores.js"></script>
</body>

</html>