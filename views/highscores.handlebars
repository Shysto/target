<!doctype html>
<html>

<head>
    <title>Socket.IO chat</title>

    <link href="https://fonts.googleapis.com/css?family=Monoton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Press+Start+2P&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Audiowide"/>
    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }

        /* ################################################# */

        #container {
            text-align: center;
            text-transform: uppercase;
            /*font-family: 'Press Start 2P', cursive;*/
            font-family: "Audiowide", cursive;
            background-color:#1A1A1A;
        }

        h1 {
            font-size: 56px;
            color: #e6ff2f;
            text-shadow: 0 -40px 100px, 0 0 2px, 0 0 1em #ffea3f, 0 0 0.5em #faff1c, 0 0 0.1em #fffe27, 0 10px 3px #000;
        }

        #user-box {
            margin-top: 5%;
            margin-bottom: 5%;
        }

        .user {
            font-size: 20px;
            color:white;
            text-shadow:
                    0 0 5px #fff,
                    0 0 10px #fff,
                    0 0 20px #fff,
                    0 0 40px #ffffff,
                    0 0 80px #ffffff,
                    0 0 90px #ffffff,
                    0 0 100px #0ff,
                    0 0 150px #0ff;
        }

        div input[type=text] {
            width: 200px;
            margin: 0 auto 20px auto;
        }

        div input[type=button] {
            margin-bottom: 10px;
        }

        a {
            display: block;
        }

    </style>
</head>

<body>

<div id="container">
    <h1>Ranking</h1>

    <div id="user-box">
        {{#each user}}
            <p class="user">{{numero}} - {{name}} : {{highScore}}</p>
        {{/each}}
    </div>

    <div>
        <input type="text" id="inpLogin" class="form-control" name="pseudo" placeholder="Pseudo">
        <input type="button" id="btnSearch" class="btn btn-default" name="search" value="Search a player">
        <a href="/users"> <input type="button" class="btn btn-default" value="Go back"> </a>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script type="text/javascript" src="/js/highscores.js"></script>
</body>

</html>