<head>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Audiowide"/>
    <style>
        /*Target Logo*/
        body{
            font-family: "Audiowide";
            background-color:#1A1A1A;
            color: whitesmoke;
        }
        .logo {
            text-align: center;
            margin: auto;
            position: relative;
            text-transform: uppercase;
            font-size: 56px;
        }
        .logo b{
            color: #ff6b03;
            text-shadow: 0 -40px 100px, 0 0 2px, 0 0 1em #ff6b03, 0 0 0.5em #ff6b03, 0 0 0.1em #ff6b03, 0 10px 3px #000;
        }
        .logo b span{
            animation: blink linear infinite 2s;
        }
        @keyframes blink {
            78% {
                color: inherit;
                text-shadow: inherit;
            }
            80% {
                text-shadow: none;
            }
            81% {
                color: inherit;
                text-shadow: inherit;
            }
            82% {
                color: #333;
                text-shadow: none;
            }
            83% {
                color: inherit;
                text-shadow: inherit;
            }
            92% {
                color: #333;
                text-shadow: none;
            }
            92.5% {
                color: inherit;
                text-shadow: inherit;
            }
        }
        .glow{
            color:white;
            text-transform: uppercase;
            text-shadow:
                    0 0 5px #fff,
                    0 0 10px #fff,
                    0 0 20px #fff,
                    0 0 40px #ffffff,
                    0 0 80px #ffffff,
                    0 0 90px #ffffff,
                    0 0 100px #0ff,
                    0 0 150px #0ff;
        }
        .back{
            text-transform: uppercase;
        }

    </style>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script>
        var rep=null;
        function load(){

            $.ajax({
                type: "GET",
                url: "/messages",
                error: function(){
                    console.log("erreur");
                },
                success: function(oRep){
                    var messages =  $("#messages");
                    messages.html(oRep);
                }
            });

        }
    //load();
        $.ajax({
            type: "GET",
            url: "/messages",
            error: function(){
                console.log("erreur");
            },
            success: function(oRep){
                var messages =  $("#messages");
                messages.hide();
                messages.html(oRep);
                messages.show("slow");
            }
        });

        window.setInterval(load,100);


    </script>
</head>

<body>

<div class="logo">
    <b>C<span>h</span>a<span>t</span></b>
</div><br><br>

<div id="messages">
</div>


{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}


<form  method="post" action="/chat">
    <input id="text" type="text" class="form-control" name="message" placeholder="Message">
    <br/>
    <button type="submit" class="btn btn-default">Submit</button>
</form>


</body>



